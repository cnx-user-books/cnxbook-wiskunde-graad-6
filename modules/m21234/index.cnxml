            <image mime-type="image/png" src="../../media/graphics4-35e9.png" id="id5927668__onlineimage" height="65" width="193"/>
          </media>
        </figure>
        <para id="id20232963">3.4  = ____________________</para>
        <figure id="id5414848">
          <media id="id5414848_media" alt="">
            <image mime-type="image/png" src="../../media/graphics5-e57f.png" id="id5414848__onlineimage" height="61" width="203"/>
