            <image mime-type="image/png" src="../../media/graphics3-b5f6.png" id="id4008199__onlineimage" height="65" width="191"/>
          </media>
        </figure>
        <para id="id27306183">3.3  = ____________________</para>
        <figure id="id5927668">
